        </DataGrid.RowStyle>

        <DataGrid.CellStyle>
            <Style TargetType="DataGridCell" BasedOn="{StaticResource DataGridCellStyle}">
                <Setter Property="Focusable" Value="False"/>
            </Style>
        </DataGrid.CellStyle>

